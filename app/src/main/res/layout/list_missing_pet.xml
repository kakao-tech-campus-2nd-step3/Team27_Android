<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_missingPet_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/main_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_missingPet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="꼬맹이"
        android:textAlignment="center"
        android:textAppearance="@style/TogetherPetText10Bold"
        app:layout_constraintEnd_toStartOf="@id/list_missingPet_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_missingPet_img" />

    <TextView
        android:id="@+id/list_missingPet_date"
        android:layout_width="28dp"
        android:layout_height="15dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/list_missing_peet_date"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="D+7H"
        android:textAlignment="center"
        android:textAppearance="@style/TogetherPetText6BoldWhite"
        app:layout_constraintBottom_toTopOf="@id/list_missingPet_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_missingPet_name"
        app:layout_constraintTop_toBottomOf="@id/list_missingPet_img" />

    <TextView
        android:id="@+id/list_missingPet_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="전남대학교 대운동장"
        android:includeFontPadding="false"
        android:textAppearance="@style/TogetherPetText8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_missingPet_name" />

</androidx.constraintlayout.widget.ConstraintLayout>