<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    >

    <TextView
        android:id="@+id/nickname_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/animal_image"
        app:layout_constraintStart_toStartOf="@id/nickname_input_field"
        android:layout_marginTop="36dp"
        android:text="안녕하세요, 꾸릉이 보호자님\n닉네임을 입력해 주세요"
        android:textAppearance="@style/TogetherPetTextHeadingLarge"
        android:includeFontPadding="false"/>

    <EditText
        android:id="@+id/nickname_input_field"
        android:layout_width="338dp"
        android:layout_height="47dp"
        android:hint="닉네임"
        android:textColorHint="@color/KTC_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nickname_main_text"
        android:background="@drawable/stroke_red_box"
        android:layout_marginTop="17dp"
        android:paddingStart="23dp"
        />




    <ImageView
        android:id="@+id/animal_image"
        android:layout_width="131dp"
        android:layout_height="131dp"
        android:layout_marginTop="82dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/nickname_input_field"
        android:src="@drawable/start_pink_button"
        />



    <TextView
        android:id="@+id/finish_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="338dp"
        android:layout_height="34dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/red_button"
        android:text="완료"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>